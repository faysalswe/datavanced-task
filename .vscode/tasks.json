{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "restore-backend",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "restore"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": []
    },
    {
      "label": "build-backend",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "build",
        "--no-restore"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "run-backend",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "run"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Building.*$",
          "endsPattern": "^.*Now listening on:.*$"
        }
      }
    },
    {
      "label": "install-frontend",
      "command": "npm",
      "type": "shell",
      "args": [
        "install"
      ],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": []
    },
    {
      "label": "start-frontend",
      "command": "npm",
      "type": "shell",
      "args": [
        "start"
      ],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true,
      "dependsOn": "install-frontend",
      "problemMatcher": {
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*- Initial chunk files.*",
          "endsPattern": ".*Compiled successfully.*"
        }
      }
    },
    {
      "label": "stop-frontend",
      "command": "echo",
      "type": "shell",
      "args": [
        "Frontend stopped"
      ]
    },
    {
      "label": "start-fullstack",
      "dependsOn": [
        "restore-backend",
        "start-frontend"
      ],
      "problemMatcher": []
    },
    {
      "label": "ef-migration-add",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "ef",
        "migrations",
        "add",
        "${input:migrationName}"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": []
    },
    {
      "label": "ef-database-update",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "ef",
        "database",
        "update"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": []
    },
    {
      "label": "check-redis",
      "command": "redis-cli",
      "type": "shell",
      "args": [
        "ping"
      ],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "migrationName",
      "type": "promptString",
      "description": "Enter migration name",
      "default": "NewMigration"
    }
  ]
}
